// Serve static files from the "client" directory
app.use(express.static(path.join(__dirname, "client")));

// ðŸ”¥ Keep a variable to store the current subscription
let currentSubscription = null;

// Save the subscription sent by the browser
app.post("/subscribe", (req, res) => {
  currentSubscription = req.body;
  res.status(201).json({ message: "Subscription saved" });

  const payload = JSON.stringify({
    title: "Subscribed!",
    body: "First notification sent right after subscribing ðŸŽ‰"
  });

  webpush.sendNotification(currentSubscription, payload)
    .then(() => console.log("âœ… First push sent"))
    .catch(console.error);
});

// Manually send a notification to the last saved subscription
app.post("/send", (req, res) => {
  if (!currentSubscription) {
    return res.status(400).json({ error: "No subscription saved. Subscribe first!" });
  }

  const payload = JSON.stringify({
    title: "Manual Push",
    body: "This was sent by calling /send ðŸš€"
  });

  webpush.sendNotification(currentSubscription, payload)
    .then(() => {
      console.log("âœ… Manual push sent");
      res.status(200).json({ message: "Push sent successfully" });
    })
    .catch(err => {
      console.error("âŒ Failed to send push:", err);
      res.status(500).json({ error: "Failed to send push" });
    });
});

const PORT = 5000;
app.listen(PORT, () => console.log(`Server running on http://localhost:${PORT}`));
